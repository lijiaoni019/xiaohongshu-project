.binner{
  background:#FD1015;
  box-shadow: 0 0 2px rgba(0,0,0,0.1);
  height: 120px;
}

.container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding: 8px 0
}

.card-product {
  overflow: hidden;
  background: white;
  height:300px;
  box-shadow: 0 0 2px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  margin: 8px 8px;
  border-radius: 8px;
}

.card-product image {
  height: 70%;
  width: 100%;
  object-fit: cover;
  flex-shrink: 0;
}

.card-product h2 {
  font-size: 12px;
  font-weight: bold;
  margin: 0;
}

.card-product p {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}